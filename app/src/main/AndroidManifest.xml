<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scan.tony.scanprice">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name="com.scan.tony.scanprice.SearchProducts.RegistrationActivity"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.scan.tony.scanprice.BasketProducts.MyIntro"
            android:label="Registration"
            android:theme="@style/AppTheme"/>

        <activity android:name="com.scan.tony.scanprice.SearchProducts.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vk.sdk.VKServiceActivity"
            android:label="ServiceActivity"
            android:theme="@style/VK.Transparent" />
        <activity android:name="com.scan.tony.scanprice.SearchProducts.ProductsActivity" />
        <activity
            android:name="com.scan.tony.scanprice.BasketProducts.BasketActivity"
            android:label="@string/title_activity_basket"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>